{{partial "navbar"}}
<div class="explorer-container">
    <div class="folder">
        <div class="container">
            <ul>
                {{#each container in model}}
                    <li {{action "switchActiveContainer" container.id}}>
                        <i class="mdi-file-folder-open"></i> {{container.name}}
                    </li>
                {{/each}}
            </ul>
            <a class="btn-floating btn-small waves-effect waves-light"><i class="mdi-content-add"></i></a>
        </div>
        {{ax-preview selectedBlob=selectedBlob}}
    </div>
    <div class="files z-depth-3">
        <div class="container">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th data-field="id">Name</th>
                        <th data-field="name">Last Modified</th>
                        <th data-field="price">Size</th>
                        <th data-field="price">Type</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blob in blobs itemController="blob"}}
                        <tr {{action "selectBlob" blob}} {{bind-attr class="blob.selected:selected"}}>
                            <td>
                                <a class="waves-effect waves-light btn btn-download" {{action "downloadBlob" blob blob.name}}>
                                    <i class="mdi-file-file-download"></i>
                                </a>
                            </td>
                            <td>{{blob.name}}</td>
                            <td>{{blob.lastModified}}</td>
                            <td>{{blob.prettySize}}</td>
                            <td>{{blob.type}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            {{!-- Hidden elements for nw.js file dialogs --}}
            <input id="nwSaveInput" type="file" nwsaveas class="hidden" />
        </div>
    </div>
</div>